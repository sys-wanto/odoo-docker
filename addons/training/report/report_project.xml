<?xml version="1.0" encoding="utf-8"?>
<odoo>


	<template id="report_project_xml">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page" style="font-size:10px">

						<h2 style="text-center">Laporan Project</h2>
						<br/>
						<table class="table">
							<tr>
								<td>
									<strong>Customer</strong>
								</td>
								<td>
									<span t-field="o.customer.name"/>
								</td>
								<td>
									<strong>Budget</strong>
								</td>
								<td>
									<span t-field="o.budget"/>
								</td>
							</tr>
							<tr>
								<td>
									<strong>Tanggal Mulai</strong>
								</td>
								<td>
									<span t-field="o.start_date"/>
								</td>
								<td>
									<strong>Tanggal Akhir</strong>
								</td>
								<td>
									<span t-field="o.end_date"/>
								</td>
							</tr>
						</table>
						<br/>

						<table class="table table-condensed" style="table-layout:auto">
							<thead>
								<tr style="background-color:#A9E2F3;">
									<th style="border:1px solid">ID</th>
									<th style="border:1px solid">Sub Project</th>
									<th style="border:1px solid">Start Date</th>
									<th style="border:1px solid">End Date</th>
									<th style="border:1px solid">Budget</th>
								</tr>
							</thead>
							<tbody>
								<t t-if="o.sub_project_ids">
									<t t-foreach="o.sub_project_ids" t-as="sub_project">
										<tr >
											<td style="border:1px solid">
												<span t-field="sub_project.id"/>
											</td>
											<td style="border:1px solid">
												<span t-field="sub_project.name"/>
											</td>
											<td style="border:1px solid">
												<span t-field="sub_project.start_date"/>
											</td>
											<td style="border:1px solid">
												<span t-field="sub_project.end_date"/>
											</td>
											<td style="border:1px solid">
												<span t-field="sub_project.budget"/>
											</td>
										</tr>
									</t>
								</t>
								<t t-else="">
									<tr>
										<td colspan="5" style="text-align: center"> KOSONG </td>
									</tr>
								</t>
								
							</tbody>
						</table>

					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>